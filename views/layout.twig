    <h1>Crying in the Rain - The Everly Brothers</h1>

    <div id="canvas"></div>
    <svg id="svg" width="700px"></svg>
    <div id="fretboard"></div>

    <!-- Player -->
    <div id="player" class="btn-group" role="group" aria-label="...">
        <div class="player-progress-container">
            <div class="player-progress-bar-container">
                <span class="player-progress-bar-total">
                    <span class="player-progress-bar"></span>
                </span>
            </div>
            <span class="player-progress-text"></span>
        </div>
        <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default btn-sm player-play">
                <span class="glyphicon glyphicon-play"  aria-hidden="true"></span> Play
            </button>
            <button type="button" class="btn btn-default btn-sm player-pause" style="display:none;">
                <span class="glyphicon glyphicon-pause"  aria-hidden="true"></span> Pause
            </button>
            <button type="button" class="btn btn-default btn-sm player-stop">
                <span class="glyphicon glyphicon-stop" aria-hidden="true"></span> Stop
            </button>
        </div>
    </div>

